@page
@model MilkShop.Pages.ProductPages.EditModel

@{
    ViewData["Title"] = "Edit";
}
<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Edit</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="#">Pages</a></li>
        <li class="breadcrumb-item active text-white">Edit</li>
    </ol>
</div>
@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData["ErrorMessage"]
    </div>
}
<!-- Single Page Header End -->
<div class="container">
    <h1>Edit</h1>

    <h4>Product</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Product.ProductId" />
                <div class="form-group">
                    <label asp-for="Product.ProductName" class="control-label"></label>
                    <input asp-for="Product.ProductName" class="form-control" />
                    <span asp-validation-for="Product.ProductName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.ProductDescription" class="control-label"></label>
                    <input asp-for="Product.ProductDescription" class="form-control" />
                    <span asp-validation-for="Product.ProductDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.ProductPrice" class="control-label"></label>
                    <input asp-for="Product.ProductPrice" class="form-control" />
                    <span asp-validation-for="Product.ProductPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.ProductImage" class="control-label"></label>
                    <input asp-for="Product.ProductImage" class="form-control" />
                    <span asp-validation-for="Product.ProductImage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.ProductCategory" class="control-label"></label>
                    <select asp-for="Product.ProductCategoryId" class="form-control" asp-items="ViewBag.ProductCategoryId"></select>
                    <span asp-validation-for="Product.ProductCategoryId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.ProductBrand" class="control-label"></label>
                    <select asp-for="Product.ProductBrandId" class="form-control" asp-items="ViewBag.ProductBrandId"></select>
                    <span asp-validation-for="Product.ProductBrandId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.Status" class="control-label"></label>
                    <input asp-for="Product.Status" class="form-control" />
                    <span asp-validation-for="Product.Status" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.CreatedDate" class="control-label"></label>
                    <input asp-for="Product.CreatedDate" class="form-control" />
                    <span asp-validation-for="Product.CreatedDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.StockQuantity" class="control-label"></label>
                    <input asp-for="Product.StockQuantity" class="form-control" />
                    <span asp-validation-for="Product.StockQuantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
