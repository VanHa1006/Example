@page
@model MilkShop.Pages.Profile.ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Shop</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="#">Pages</a></li>
        <li class="breadcrumb-item active text-white">Profile</li>
    </ol>
</div>
<!-- Single Page Header End -->
@if (ViewData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @ViewData["SuccessMessage"]
    </div>
}

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData["ErrorMessage"]
    </div>
}

@if (Model.Customer != null)
{
    <form method="post">
        <div class="container rounded bg-white mt-5 mb-5">
            <div class="row">
                <div class="col-md-3 border-right">
                    <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                        <img class="rounded-circle mt-5" width="150px" src="@Model.Customer.ImageUrl">
                        <span class="font-weight-bold">@Html.DisplayFor(model => model.Customer.UserName)</span>
                        <span class="text-black-50">@Html.DisplayFor(model => model.Customer.UserEmail)</span>
                    </div>
                </div>
                <div class="col-md-5 border-right">
                    <div class="p-3 py-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="text-right">Profile Settings</h4>
                        </div>
                        <div class="row mt-2">
                            <div class="col-md-6">
                                <label asp-for="Customer.UserName" class="labels"></label>
                                <input asp-for="Customer.UserName" class="form-control" placeholder="first name">
                                <span asp-validation-for="Customer.UserName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-12">
                                <label asp-for="Customer.PhoneNumber" class="labels"></label>
                                <input asp-for="Customer.PhoneNumber" class="form-control" placeholder="enter phone number">
                                <span asp-validation-for="Customer.PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <label asp-for="Customer.Address" class="labels"></label>
                                <input asp-for="Customer.Address" class="form-control" placeholder="enter address line 1">
                                <span asp-validation-for="Customer.Address" class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <label asp-for="Customer.UserEmail" class="labels"></label>
                                <input asp-for="Customer.UserEmail" class="form-control" placeholder="enter email id">
                                <span asp-validation-for="Customer.UserEmail" class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <label asp-for="Customer.CreatedDate" class="labels"></label>
                                <input asp-for="Customer.CreatedDate" class="form-control" placeholder="Enter create date">
                                <span asp-validation-for="Customer.CreatedDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <label asp-for="Customer.PhoneNumber" class="labels"></label>
                                <input asp-for="Customer.PhoneNumber" class="form-control" placeholder="Enter Phone Number">
                                <span asp-validation-for="Customer.PhoneNumber" class="text-danger"></span>
                            </div>
                            <input type="hidden" asp-for="Customer.UserId" />
                            <input type="hidden" asp-for="Customer.ImageUrl" />
                            <input type="hidden" asp-for="Customer.Status" />
                        </div>
                        <div class="mt-5 text-center">
                            <button type="submit" class="btn btn-primary profile-button">Save Profile</button>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="p-3 py-5">
                        <div class="col-md-12">
                            <label asp-for="Customer.DateOfBirth" class="labels"></label>
                            <input asp-for="Customer.DateOfBirth" class="form-control" placeholder="Your Birthdate">
                            <span asp-validation-for="Customer.DateOfBirth" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label asp-for="Customer.PreferredLanguage" class="labels"></label>
                            <input asp-for="Customer.PreferredLanguage" class="form-control" placeholder="Your language">
                            <span asp-validation-for="Customer.PreferredLanguage" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label asp-for="Customer.Password" class="labels"></label>
                            <input asp-for="Customer.Password" class="form-control" placeholder="Password">
                            <span asp-validation-for="Customer.Password" class="text-danger"></span>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </form>
}
else
{
    <div>
        <p>Customer information is not available.</p>
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
