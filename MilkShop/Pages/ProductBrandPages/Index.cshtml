@page
@model MilkShop.Pages.ProductBrandPages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Brand</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="#">Pages</a></li>
        <li class="breadcrumb-item active text-white">Brand</li>
    </ol>
</div>
<!-- Single Page Header End -->
<div class="container">
    <h1>ProductBrands</h1>

    <p>
        <a class="btn btn-sm btn-outline-primary" asp-page="Create">Create New</a>
    </p>
    <form method="get">
        <div class="input-group">
            <input class="form-control" asp-for="SearchTerm">
            <div class="input-group-append">
                <button class="btn btn-primary" type="submit">Search</button>
            </div>
        </div>
    </form>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProductBrand.Items[0].ProductBrandName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductBrand.Items[0].Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductBrand.Items[0].CreatedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductBrand.Items[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductBrand.Items[0].LogoUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductBrand.Items[0].WebsiteUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductBrand.Items[0].CountryOfOrigin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductBrand.Items[0].ContactEmail)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductBrand.Items[0].Address)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ProductBrand.Items)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductBrandName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LogoUrl)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WebsiteUrl)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CountryOfOrigin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContactEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ProductBrandId" class="btn btn-sm btn-outline-primary">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.ProductBrandId" class="btn btn-sm btn-outline-primary">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.ProductBrandId" class="btn btn-sm btn-outline-primary">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="d-flex justify-content-center align-items-center">
        <a asp-page="/ProductBrandPages/Index" asp-route-SearchTerm="@Model.SearchTerm" asp-route-PageIndex="@(Model.PageIndex - 1)"
           class="@(Model.PageIndex == 1 ? "disabled" : "") btn btn-primary">Previous</a>

        <span class="m-3">Page @Model.ProductBrand.Page of @Model.ProductBrand.TotalPages </span>

        <a asp-page="/ProductBrandPages/Index" asp-route-SearchTerm="@Model.SearchTerm" asp-route-PageIndex="@(Model.PageIndex + 1)"
           class="@(Model.PageIndex == Model.ProductBrand.TotalPages ? "disabled" : "") btn btn-primary">Next</a>
    </div>
</div>
<style>
    .disabled {
        pointer-events: none;
        color: grey;
    }
</style>
